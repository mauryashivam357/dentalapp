<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".AddPatientActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingStart="2dp"
            android:text="@string/name"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/edittext_name"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/edit_text_border"
            android:hint="Name"
            android:lines="1"
            android:paddingStart="10dp"

            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Blood Group"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edittext_Blood"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="@drawable/edit_text_border"
            android:hint="Blood Group"
            android:lines="1"
            android:paddingStart="10dp"

            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Relation"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <Spinner
            android:id="@+id/textview_Relation"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="@drawable/edit_text_border"
            android:hint="Relation"
            android:padding="12dp"
            android:lines="1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:textSize="18dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Mobile"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textview_mobile_patient"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/edit_text_border"

            android:hint="Mobile"
            android:inputType="phone"
            android:lines="1"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Email"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/textview_Email_patient"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"

            android:layout_marginTop="8dp"

            android:background="@drawable/edit_text_border"

            android:hint="Email"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="30dp">
            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingStart="10dp"
                android:text="Age"

                android:textColor="@color/black"
                android:textSize="20dp" />
            <TextView
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:paddingStart="30dp"
                android:text="Gender"
                android:textColor="@color/black"
                android:textSize="20dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edittext_Age"
                android:layout_width="180dp"
                android:layout_height="57dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_border"
                android:hint="Age"
                android:lines="1"
                android:paddingStart="10dp"

                android:singleLine="true"
                android:text="" />


            <Spinner
                android:id="@+id/textview_selected_gender_edit_text"
                android:layout_width="190dp"
                android:layout_height="58dp"

                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:background="@drawable/edit_text_border"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                android:hint="Gender"
                android:lines="1"

                android:paddingStart="10dp"
                android:singleLine="true"
                android:text=""
                android:textSize="18dp" />
        </LinearLayout>








        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patient Submit"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_shape_round"
            android:layout_marginTop="25dp"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>
