<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".BookAppointment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:paddingStart="2dp"
            android:text="Select Clinic"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/custom_spinner"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="@drawable/edit_text_border"
            android:hint="Relation"
            android:padding="12dp"
            android:lines="1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:textSize="18dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Chief complaint"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />


        <Spinner
            android:id="@+id/textview_chief_complaint_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="@drawable/edit_text_border"
            android:hint="Relation"
            android:padding="12dp"
            android:lines="1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:textSize="18dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="" />




        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Select Date Time"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">













            <TextView
                android:id="@+id/selected_time_edit_text"
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:layout_alignParentLeft="true"
                android:layout_margin="2dp"
                android:layout_marginStart="5dp"
                android:background="@drawable/edit_text_border"
                android:hint="Date and time"
                android:padding="12dp"
                android:lines="1"
                android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
                android:textSize="18dp"
                android:paddingStart="10dp"
                android:singleLine="true"
                android:text="" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:text="Select Patient"
                android:textColor="@color/black"
                android:textSize="20dp" />
            <Button
                android:id="@+id/icon_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/baseline_add_circle_24"
                />
        </LinearLayout>


        <Spinner
            android:id="@+id/textview_pecent"
            android:layout_width="fill_parent"
            android:layout_height="57dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="@drawable/edit_text_border"
            android:hint="Relation"
            android:padding="12dp"
            android:lines="1"
            android:drawableEnd="@drawable/baseline_arrow_drop_down_24"
            android:textSize="18dp"
            android:paddingStart="10dp"
            android:singleLine="true"
            android:text="" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="2dp"
            android:text="Mobile"
            android:layout_marginTop="10dp"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textview_mobile_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_alignParentLeft="true"
            android:layout_margin="2dp"
            android:background="@drawable/edit_text_border"
            android:hint="Mobile"
            android:inputType="phone"
            android:lines="1"
            android:paddingStart="10dp"

            android:singleLine="true"
            android:text="" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingStart="2dp"
            android:text="Remark"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/textview_remark_edit_text"
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            android:layout_margin="2dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="7dp"
            android:background="@drawable/edit_text_border"
            android:hint="Remark"
            android:lines="1"
            android:paddingStart="10dp"
            android:singleLine="true"

            android:text="" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:background="@drawable/btn_shape_round"
            android:layout_marginTop="25dp"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>

